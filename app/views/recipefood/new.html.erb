<h2>Add Food</h2>

<%= form_with url: "/recipes/#{@recipe_id}/add_food", method: :post do |form| %>
  <div>
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>

      <%= form.label :food_id %>
      <%= form.select :food_id, @foods.map { |food| [food.name, food.id] } %>

  </div>
  <%= form.submit "Add Food" %>
  <br>
<%end%>

<div>
  <a href="/recipe">Recipes</a> 
</div>