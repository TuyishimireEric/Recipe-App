<h2>Sign up</h2>

<%= form_with url: '/add_food/:id', method: :post do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :measurement_unit %><br />
    <%= f.number_field :measurement_unit %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>

  <div class="add_food">
    <%= f.submit "Add Food" %>
  </div>
<% end %>