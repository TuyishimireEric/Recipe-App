<div class="page_container">
  <% @recipes.each do |a| %>
    <div class="a_recipe">
      <div class="first_section">
        <a href='/recipes/<%=a.id%>' class="recipe_details_link">
          <h3><%=a.name%></h3>
        </a>
        <p>By: <%=a.user.name%></p>
      </div>
      <div class="second_section">
        <p>Total Food Item: <%=a.recipe_foods.count%><br/>Total Food Item: 
          <% sum = 0 %>
            <% a.recipe_foods.each do |rp| %>
              <% sum += rp.quantity * rp.food.price %>
            <% end %>
            $<%= sum %>
        </p>
      </div>
    </div>
  <% end %>
</div>