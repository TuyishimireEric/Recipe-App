<div class="m-5">
<div class="m-5 d-flex justify-content-end">
<%= link_to new_food_path, class: "btn btn-success" do  %>
  Add Food
<% end %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="border border-none">
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></</td>
      <td> <%= form_with url: food_path(food.id), method: :delete do |form| %>
        <%= form.submit 'Delete', class: "btn btn-danger" %>
      <% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
